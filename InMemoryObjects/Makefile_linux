FILES := $(wildcard src/*.cpp)
TARGETS := $(addsuffix .o, $(FILES))

all: bin $(TARGETS)
	echo $(TARGETS)

#compiler=clang++
compiler=g++

# clang (Mac)
# Version 10 or later
# CPP_VERSION=c++20
# Version 9 or earlier
# CPP_VERSION=c++2a

# g++ (Linux)
# Version 10 or later
# CPP_VERSION=c++20
# Version 9 or earlier (Codespaces)
CPP_VERSION=c++2a

bin:
	mkdir -p bin
	mkdir -p bin/src

%.o: %
	echo $@
	g++ -fdump-lang-class=bin/$<_single.out -c $< -Iinclude -o bin/ignore.o


clean:
	rm -rf bin/*.o bin/*.out

#.PHONY: all $(TARGETS)
